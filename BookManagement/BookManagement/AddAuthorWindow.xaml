<Window x:Class="BookManagement.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagement"
        mc:Ignorable="d"
        Title="Добавить автора" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid VerticalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Инициалы автора" HorizontalAlignment="Center"/>
        <TextBox Grid.Column="0" Grid.Row="1" x:Name="addAuthorName" />
        <Button Grid.Column="0" Grid.Row="3" x:Name="buttonAddAuthor" HorizontalAlignment="Center" Content="Добавить" Click="buttonAddAuthor_Click"/>
    </Grid>
</Window>
